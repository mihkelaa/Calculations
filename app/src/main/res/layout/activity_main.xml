<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
    android:orientation="vertical"
tools:context=".MainActivity">

    <TextView
        android:id="@+id/unitpricex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/unitprice" />

    <EditText
        android:id="@+id/unitprice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enternum" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numofunits"
        android:hint="@string/numofunits"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/numberofunits"
        android:hint="@string/enternum"
        />
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup1"
        android:orientation="vertical">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unitexclvat"
            android:hint="@string/unitpriceexclvat"
            android:checked="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/unitinclvat"
            android:hint="@string/unitpriceeinclvat"
            android:checked="false"/>

    </RadioGroup>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/clear"
        android:background="@drawable/btn_shape"
        android:onClick="onClick"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ok"
        android:background="@drawable/btn_shape"
        android:onClick="onClick"
        />
    </LinearLayout>

        android:layout_width="wrap_content"
        android:layout_height="match_parent">
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/amountofexclvat"
    android:id="@+id/amountofexclvat" />
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/VAT"
    android:id="@+id/vat"/>
    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/amountofinclvat"
    android:text="@string/amountofinclvat"/>


















</>